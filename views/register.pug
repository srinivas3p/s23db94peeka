extends layout

block content
  .container
    h1= title
    h2= message
    br
    form(role='form', action="/register", method="post", style='max-width: 300px;')
      .form-group
        label(for='username') Enter Username
        input.form-control(type='text', id='username', name='username', placeholder='Enter Username', required)
      .form-group
        label(for='password') Password
        input.form-control(type='password', id='password', name='password', placeholder='Password', required)
      button.btn.btn-default(type='submit') Submit
      a(href='/') 
        button.btn.btn-primary(type="button") Cancel
