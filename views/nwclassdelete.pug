extends layout

block content
  h1= title

  if(toShow == null)
    h2 No instance to delete
  else
    - let nwclassid = toShow._id
    - let classification = toShow.classification
    - let range = toShow.range
    - let name = toShow.name 
    - let damage = toShow.damage 
    - let actionid = "/resource/nwclass/" + nwclassid
    script let actionid = "#{actionid}"
    div
     div.row 
      div(class='nwclassAttr mr-3') nwclass ID is:
      div #{nwclassid}
     div.row
      div(class='nwclassAttr mr-3') nwclass classification is:
      div #{classification}
     div.row
      div(class='nwclassAttr mr-3') nwclass range is:
      div #{range}
     div.row
      div(class='nwclassAttr mr-3') nwclass name is:
      div #{name}
    div.row
      div(class='nwclassAttr mr-3') nwclass damage is:
      div #{damage}
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
  script.
   function cancel() {
    window.location.href='/nwclasss'
    }
  script.
    function deleteOnid() {
     console.log("starting delete")
     fetch(actionid, {
      method: 'DELETE'
     }).then((resp) => {
        return resp.json();
     }).then((body) => {
        alert("Delete succeded")
        window.location.href='/nwclass'
     }).catch((error) => {
        alert("Delete failed " + error )
     });
    }

    